{
  "name": "deep_research",
  "description": "Simulates ChatGPT Deep Research pattern - comprehensive multi-phase research workflow",
  "phases": [
    {
      "id": "planning",
      "name": "Research Planning",
      "delay_range_ms": [500, 1500],
      "agents": [
        {
          "id": "query_analyzer",
          "name": "Query Analyzer",
          "tasks": [
            "Analyzing research question...",
            "Identifying key concepts and entities",
            "Determining search strategy"
          ],
          "delay_range_ms": [800, 2000]
        },
        {
          "id": "scope_planner",
          "name": "Scope Planner",
          "tasks": [
            "Defining research boundaries",
            "Identifying required source types",
            "Creating research outline"
          ],
          "delay_range_ms": [1000, 2500]
        }
      ]
    },
    {
      "id": "search",
      "name": "Information Gathering",
      "delay_range_ms": [1000, 2000],
      "agents": [
        {
          "id": "web_searcher",
          "name": "Web Searcher",
          "tasks": [
            "Searching primary sources...",
            "Found 15 relevant articles",
            "Searching academic databases...",
            "Found 8 peer-reviewed papers",
            "Searching news archives...",
            "Found 12 recent news articles"
          ],
          "delay_range_ms": [1500, 4000]
        },
        {
          "id": "content_fetcher",
          "name": "Content Fetcher",
          "tasks": [
            "Retrieving full article content...",
            "Processing 35 documents",
            "Extracting relevant sections"
          ],
          "delay_range_ms": [2000, 5000]
        }
      ]
    },
    {
      "id": "analysis",
      "name": "Deep Analysis",
      "delay_range_ms": [1500, 3000],
      "agents": [
        {
          "id": "fact_extractor",
          "name": "Fact Extractor",
          "tasks": [
            "Extracting key facts from sources...",
            "Identified 47 relevant facts",
            "Cross-referencing claims",
            "Verified 42 facts across multiple sources"
          ],
          "delay_range_ms": [2000, 4000]
        },
        {
          "id": "contradiction_detector",
          "name": "Contradiction Detector",
          "tasks": [
            "Analyzing source consistency...",
            "Found 3 conflicting claims",
            "Resolving contradictions with additional sources"
          ],
          "delay_range_ms": [1500, 3500]
        },
        {
          "id": "insight_generator",
          "name": "Insight Generator",
          "tasks": [
            "Identifying patterns and trends...",
            "Generating preliminary insights",
            "Ranking insights by relevance"
          ],
          "delay_range_ms": [2000, 4500]
        }
      ]
    },
    {
      "id": "synthesis",
      "name": "Report Synthesis",
      "delay_range_ms": [1000, 2500],
      "agents": [
        {
          "id": "outline_builder",
          "name": "Outline Builder",
          "tasks": [
            "Structuring report sections...",
            "Organizing findings by theme",
            "Creating logical flow"
          ],
          "delay_range_ms": [1000, 2500]
        },
        {
          "id": "content_writer",
          "name": "Content Writer",
          "tasks": [
            "Writing executive summary...",
            "Drafting main findings section",
            "Writing detailed analysis",
            "Adding supporting evidence",
            "Writing conclusions"
          ],
          "delay_range_ms": [2500, 6000]
        },
        {
          "id": "citation_manager",
          "name": "Citation Manager",
          "tasks": [
            "Formatting citations...",
            "Generating bibliography",
            "Adding inline references"
          ],
          "delay_range_ms": [800, 2000]
        }
      ]
    },
    {
      "id": "review",
      "name": "Quality Review",
      "delay_range_ms": [500, 1500],
      "agents": [
        {
          "id": "fact_checker",
          "name": "Fact Checker",
          "tasks": [
            "Verifying all claims in report...",
            "Checking citation accuracy",
            "All facts verified"
          ],
          "delay_range_ms": [1500, 3000]
        },
        {
          "id": "editor",
          "name": "Editor",
          "tasks": [
            "Reviewing for clarity and coherence...",
            "Making final adjustments",
            "Report finalized"
          ],
          "delay_range_ms": [1000, 2500]
        }
      ]
    }
  ]
}
